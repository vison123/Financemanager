<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_money_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="流水名称"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/tv_money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_money_name"
        android:layout_toEndOf="@+id/tv_money_name" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="分类名称"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/tv_money_amount"
        android:layout_toLeftOf="@+id/tv_money_amount"
        android:layout_toStartOf="@+id/tv_money_amount" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line"
        android:id="@+id/rl_list_dvide" />

</RelativeLayout>