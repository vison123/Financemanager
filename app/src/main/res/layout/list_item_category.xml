<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="分类名称"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/tv_category_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类预算"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/tv_category_name"
        android:layout_alignBottom="@+id/tv_category_name"
        android:layout_toRightOf="@+id/tv_category_name"
        android:layout_toEndOf="@+id/tv_category_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(预算)"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/tv_category_budget"
        android:layout_alignBottom="@+id/tv_category_budget"
        android:layout_toRightOf="@+id/tv_category_budget"
        android:layout_toEndOf="@+id/tv_category_budget"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_category_income"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="分类收入"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_category_name"
        android:layout_alignLeft="@+id/tv_category_name"
        android:layout_alignStart="@+id/tv_category_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收入"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        android:id="@+id/textView5"
        android:layout_below="@+id/tv_category_income"
        android:layout_alignLeft="@+id/tv_category_income"
        android:layout_alignStart="@+id/tv_category_income" />

    <TextView
        android:id="@+id/tv_category_outcome"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="分类支出"
        android:textColor="@color/textColorPrimary"
        android:layout_alignBaseline="@+id/tv_category_income"
        android:layout_alignBottom="@+id/tv_category_income"
        android:layout_alignLeft="@+id/tv_category_budget"
        android:layout_alignStart="@+id/tv_category_budget" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支出"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/tv_category_outcome"
        android:layout_alignLeft="@+id/tv_category_outcome"
        android:layout_alignStart="@+id/tv_category_outcome" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divide_line"
        android:id="@+id/rl_list_dvide" />

</RelativeLayout>